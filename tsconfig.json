{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "ESNext", "ES2016"],
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["./packages/**/*.ts"],
  "exclude": ["**/dist/**", "node_modules"]
}
